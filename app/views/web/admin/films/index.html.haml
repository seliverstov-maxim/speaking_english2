.page-header
  %h1=t '.title'

= link_to t('.new'), new_admin_film_path, class: 'btn btn-primary pull-right'

- if @films.present?
  %table.table.table-striped
    %thead
      %tr
        %th.id= sort_link(@q, :id)
        %th.fullname= sort_link(@q, :title)
        %th.actions= t 'helpers.actions'
    %tbody
      - @films.each do |film|
        %tr
          %td= film.id
          %td= film.title
          %td.btn-lg
            = link_to edit_admin_film_path(film.id) do
              %i.glyphicon.glyphicon-edit
            - if film.deleted?
              = link_to admin_film_path(film, film: { state_event: :restore }), method: :patch do
                %i.glyphicon.glyphicon-share-alt
            - else
              = link_to admin_film_path(film), method: :delete do
                %i.glyphicon.glyphicon-remove

  = paginate @films
- else
  .well
    = t '.no_data'